<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.cjmalone.screen.MainActivity">

    <EditText
        android:id="@+id/package1EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="org.secuso.privacyfriendlysudoku" />

    <Button
        android:id="@+id/quickPic1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/package1EditText" />

    <EditText
        android:id="@+id/package2EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/package1EditText"
        android:text="naman14.timber" />

    <Button
        android:id="@+id/quickPic2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quickPic1Button"
        android:layout_toRightOf="@id/package2EditText" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/package2EditText"
        android:text="Shortcur name" />

    <Button
        android:id="@+id/createShortcutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nameEditText"
        android:text="@string/create_shortcut" />
</RelativeLayout>
